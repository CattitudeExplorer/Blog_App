<%- include("partials/header.ejs") %>

<div class="contact-title">
    <h1>Contact</h1>
</div>
<p class="text_contact">Do you have any questions or suggestions? <br> I would love to hear from you and try to read 
    and reply to <br> all comments left here on the blog!  </p>
<div class="contact-form">
    <form action="/posts/contact" method="POST">
        <div class="contact-form-group">
          <label for="name">Name:</label>
          <input type="text" name="name" id="name" placeholder="Name" required />    <!-- name="name" is used in thankyou.ejs to catch it -->
        </div>
        <div class="contact-form-group">
            <label for="email">Email: </label>
            <input type="email" name="email" id="email" placeholder="Email" />
        </div>
        <div class="contact-form-group">
            <label class="comment-contact" for="comment">Your comment: </label>
            <textarea id="comment" name="comment" placeholder = "Write a comment here..."></textarea>
        </div>
        <input type="Submit" class="btn_SendFeedback" value="Send">
    </form>
</div>
<%- include("partials/footer.ejs") %>